rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow all authenticated users to upload to pitches folder
    match /pitches/{userId}/{fileName} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow all authenticated users to upload to test folder (including subdirectories)
    match /test/{allPaths=**} {
      allow read, write, delete: if request.auth != null;
    }
    
    // Allow all authenticated users to upload anywhere (TEMPORARY - for testing)
    match /{allPaths=**} {
      allow read, write, delete: if request.auth != null;
    }
  }
}